# Lawmatics MCP Server Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# LAWMATICS OAUTH 2.0 CREDENTIALS (REQUIRED)
# ============================================================================
# Get these from Lawmatics Settings → API → OAuth Applications
# When creating the OAuth app, use this callback URL:
#   - Local: http://localhost:8000/oauth/callback
#   - Cloud: https://your-project.fastmcp.app/oauth/callback

LAWMATICS_CLIENT_ID=your_client_id_here
LAWMATICS_CLIENT_SECRET=your_client_secret_here
LAWMATICS_REDIRECT_URI=http://localhost:8000/oauth/callback

# OPTIONAL: Pre-configured access token (if you already have one)
# LAWMATICS_ACCESS_TOKEN=your_access_token_here

# LEGACY: Direct API key (if Lawmatics provides one)
# LAWMATICS_API_KEY=your_api_key_here

# Lawmatics API Base URL (optional, defaults to production API)
LAWMATICS_BASE_URL=https://api.lawmatics.com/v1/

# Server Configuration
HOST=0.0.0.0
MCP_PORT=8000

# Logging
LOG_LEVEL=INFO
DEBUG=false

# Environment
ENVIRONMENT=production
